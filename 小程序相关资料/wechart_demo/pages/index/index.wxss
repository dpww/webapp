/* pages/index/index.wxss */
#indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #8ed145;
  height: 100%;  
}


#indexContainer .indexImg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin: 100rpx 0;
}

#indexContainer .userName {
  font-size: 36rpx;
  font-weight: bold;
  margin: 100rpx 0;
}

#indexContainer .toStudy {
  width: 300rpx;
  height: 80rpx;
  border: 1rpx solid #eee;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
}